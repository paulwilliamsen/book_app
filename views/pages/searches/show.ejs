<!DOCTYPE html>

<html lang="en">
  <head>
    <title>book app</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="../../styles/reset.css" type="text/css">
    <link rel="stylesheet" href="../../styles/base.css" type="text/css">
    <link rel="stylesheet" href="../../styles/modules.css" type="text/css">
    <link rel="stylesheet" href="../../styles/layout.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Advent+Pro%7CAntic" rel="stylesheet">
  </head>
  <body>
    <header>
      <h1>book app</h1>
      <a href="/">Saved Books</a>
      <a href="/searches/new">Search API</a>
      <hr>
    </header>
    <h2>Search Results</h2>
    <ul class="cards">
      <% mapResults.forEach(book => { %>
        <li class="cards">
          <h3><%= book.title %></h3>
          <div><img src="<%= book.img_url %>" alt="<%= book.title %>"></div>
          <h5><%= book.authors %></h5>
          <p><%= book.description %></p>

          <button class="select-book">Select This Book</button>
          <%- include('../views/pages/books/form') %>
        </li>
      <% }); %>
    </ul>
    <script type="text/javascript" src="./app.js"></script>
  </body>
</html>