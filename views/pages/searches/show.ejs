<!DOCTYPE html>

<html lang="en">
    <%- include('../layout/head') %>
    <body>
    <header>
      <h1>book app</h1>
      <a href="/">Saved Books</a>
      <a href="/searches/new">Search API</a>
      <hr>
    </header>
    <main>
      <h2>Search Results</h2>
      <ul id="bookcase">
        <% mapResults.forEach(book => { %>
          <li class="cards">
              <%- include('../layout/card', {book: book}) %>
              <p><%= book.description %></p>
            <button class="select-book">Select This Book</button>
            <%- include('../layout/form', {book: book, bookshelves: shelves}) %>
          </li>
        <% }); %>
      </ul>
    </main>
    <script type="text/javascript" src="./app.js"></script>
  </body>
</html>