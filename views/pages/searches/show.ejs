<!DOCTYPE html>

<html lang="en">
    <%- include('../books/head') %>
    <body>
    <header>
      <h1>book app</h1>
      <a href="/">Saved Books</a>
      <a href="/searches/new">Search API</a>
      <hr>
    </header>
    <h2>Search Results</h2>
    <ul class="cards">
      <% mapResults.forEach(book => { %>
        <li class="cards">
            <%- include('../books/card', {book: book}) %>
            <p><%= book.description %></p>
          <button class="select-book">Select This Book</button>
          <%- include('../books/form', {book: book}) %>
        </li>
      <% }); %>
    </ul>
    <script type="text/javascript" src="./app.js"></script>
  </body>
</html>